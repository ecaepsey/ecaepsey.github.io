---
const posts = await Astro.glob('./*.md');
posts.sort((a, b) => new Date(b.frontmatter.date) - new Date(a.frontmatter.date));
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>My Training â€” Damir Aushenov</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rajdhani:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      *, *::before, *::after { box-sizing: border-box; margin: 0; padding: 0; }

      body {
        background: #05080d url('/bg.jpeg') center center / cover no-repeat fixed;
        font-family: 'Rajdhani', sans-serif;
        min-height: 100vh;
      }

      .profile-header {
        background: linear-gradient(180deg, #0a1220 0%, #0d1520 100%);
        border-bottom: 1px solid #1a2a1a;
        padding: 16px 32px;
        display: flex;
        align-items: center;
        gap: 16px;
      }
      .profile-header img {
        width: 56px;
        height: 56px;
        object-fit: cover;
        object-position: center top;
        border: 2px solid #3a5a3a;
        display: block;
      }
      .profile-header-name {
        font-size: 22px;
        font-weight: 700;
        color: #fff;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        line-height: 1;
      }
      .profile-header-title {
        margin-top: 4px;
        font-size: 13px;
        font-weight: 500;
        color: #4db84d;
        letter-spacing: 0.06em;
        text-transform: uppercase;
      }

      nav {
        background: linear-gradient(180deg, #0d1520 0%, #080e18 100%);
        border-bottom: 1px solid #1a2a1a;
      }
      .nav-tabs {
        display: flex;
        list-style: none;
        padding: 0 32px;
      }
      .nav-tabs li a {
        display: block;
        padding: 18px 28px 16px;
        font-size: 17px;
        font-weight: 600;
        letter-spacing: 0.04em;
        text-decoration: none;
        color: #4db84d;
        border-bottom: 3px solid transparent;
        transition: color 0.15s, border-color 0.15s;
        position: relative;
        top: 1px;
      }
      .nav-tabs li a:hover {
        color: #80e080;
        border-bottom-color: rgba(100,220,100,0.35);
      }
      .nav-tabs li.active a {
        color: #8fff6a;
        border-bottom-color: #8fff6a;
      }

      .page { padding: 40px 32px; }

      .log-block {
        width: 480px;
        background: rgba(6, 12, 24, 0.82);
        border-top: 2px solid #8fff6a;
        padding: 22px 24px 28px;
      }

      .log-block h2 {
        font-size: 26px;
        font-weight: 700;
        color: #fff;
        margin-bottom: 20px;
      }

      .post-item {
        display: block;
        text-decoration: none;
        padding: 14px 0;
        border-bottom: 1px solid rgba(255,255,255,0.07);
        transition: padding-left 0.15s;
      }
      .post-item:last-child { border-bottom: none; }
      .post-item:hover { padding-left: 6px; }

      .post-item-date {
        font-size: 11px;
        color: #7a8a9a;
        letter-spacing: 0.08em;
        margin-bottom: 4px;
      }

      .post-item-title {
        font-size: 18px;
        font-weight: 700;
        color: #fff;
        transition: color 0.15s;
      }
      .post-item:hover .post-item-title { color: #8fff6a; }

      .empty {
        font-size: 15px;
        color: #7a8a9a;
      }
    </style>
  </head>
  <body>
    <div class="profile-header">
      <img src="/avatar.jpg" alt="Damir Aushenov" />
      <div>
        <div class="profile-header-name">Damir Aushenov</div>
        <div class="profile-header-title">iOS Developer</div>
      </div>
    </div>

    <nav>
      <ul class="nav-tabs">
        <li><a href="/">Main</a></li>
        <li><a href="/works">My Works</a></li>
        <li class="active"><a href="/training">My Training</a></li>
      </ul>
    </nav>

    <div class="page">
      <div class="log-block">
        <h2>Training Log</h2>
        {posts.length === 0 ? (
          <p class="empty">No entries yet.</p>
        ) : (
          posts.map(post => {
            const date = new Date(post.frontmatter.date).toLocaleDateString('en-US', {
              year: 'numeric', month: 'long', day: 'numeric'
            });
            return (
              <a href={post.url} class="post-item">
                <div class="post-item-date">{date}</div>
                <div class="post-item-title">{post.frontmatter.title}</div>
              </a>
            );
          })
        )}
      </div>
    </div>
  </body>
</html>
